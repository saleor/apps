{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "saleor-app-payment-stripe",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "check-types": "tsc",
    "deploy": "tsx --env-file-if-exists=.env ./scripts/deploy.ts",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "fetch-schema": "curl https://raw.githubusercontent.com/saleor/saleor/${npm_package_config_saleor_schemaVersion}/saleor/graphql/schema.graphql > graphql/schema.graphql",
    "generate": "graphql-codegen",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "migrate": "pnpm tsx --env-file-if-exists=.env ./scripts/run-webhooks-migration.ts",
    "migrate:dry-run": "pnpm tsx --env-file-if-exists=.env ./scripts/run-webhooks-migration.ts --dry-run",
    "start": "next start",
    "test": "pnpm run test:unit",
    "test:ci": "pnpm run test:unit",
    "test:integration:dynamodb": "vitest --project=integration:dynamodb",
    "test:unit": "vitest --project=unit"
  },
  "config": {
    "saleor": {
      "schemaVersion": "3.21"
    }
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.651.1",
    "@aws-sdk/lib-dynamodb": "3.651.1",
    "@aws-sdk/util-dynamodb": "3.651.1",
    "@hookform/resolvers": "^3.3.1",
    "@opentelemetry/api": "catalog:",
    "@opentelemetry/api-logs": "catalog:",
    "@opentelemetry/instrumentation": "catalog:",
    "@opentelemetry/resources": "catalog:",
    "@opentelemetry/sdk-logs": "catalog:",
    "@opentelemetry/sdk-trace-node": "catalog:",
    "@opentelemetry/semantic-conventions": "catalog:",
    "@saleor/app-sdk": "link:../../node_modules/@saleor/app-sdk",
    "@saleor/apps-logger": "workspace:*",
    "@saleor/apps-otel": "workspace:*",
    "@saleor/apps-shared": "workspace:*",
    "@saleor/apps-trpc": "workspace:*",
    "@saleor/apps-ui": "workspace:*",
    "@saleor/macaw-ui": "catalog:",
    "@saleor/react-hook-form-macaw": "workspace:*",
    "@sentry/cli": "catalog:",
    "@sentry/nextjs": "catalog:",
    "@t3-oss/env-nextjs": "0.11.1",
    "@trpc/client": "catalog:",
    "@trpc/next": "catalog:",
    "@trpc/react-query": "catalog:",
    "@trpc/server": "catalog:",
    "@vercel/otel": "catalog:",
    "currency-codes": "2.2.0",
    "currency.js": "2.0.4",
    "dynamodb-toolbox": "1.8.2",
    "graphql-tag": "2.12.6",
    "modern-errors": "7.0.1",
    "modern-errors-serialize": "6.1.0",
    "neverthrow": "6.2.1",
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-hook-form": "^7.43.9",
    "stripe": "18.1.0",
    "urql": "catalog:",
    "usehooks-ts": "^2.9.1",
    "zod": "catalog:",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typed-document-node": "5.0.5",
    "@graphql-codegen/typescript": "4.0.5",
    "@graphql-codegen/typescript-operations": "4.1.3",
    "@graphql-codegen/typescript-urql": "4.0.0",
    "@graphql-typed-document-node/core": "3.2.0",
    "@saleor/eslint-config-apps": "workspace:*",
    "@saleor/sentry-utils": "workspace:*",
    "@saleor/typescript-config-apps": "workspace:*",
    "@saleor/webhook-utils": "workspace:*",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.2.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/react": "18.2.5",
    "@types/react-dom": "18.2.5",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "3.1.1",
    "aws-sdk-client-mock": "4.0.1",
    "eslint": "catalog:",
    "eslint-plugin-n": "17.16.2",
    "graphql-config": "5.0.3",
    "next-test-api-route-handler": "4.0.16",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "vite": "6.2.4",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.1"
  }
}
