      "env": [
        "ALLOWED_DOMAIN_PATTERN",
        "APL",
        "APP_API_BASE_URL",
        "APP_DEBUG",
        "APP_IFRAME_BASE_URL",
        "NODE_ENV",
        "PORT",
        "REST_APL_ENDPOINT",
        "REST_APL_TOKEN",
        "SECRET_KEY",
        "OTEL_ENABLED",
        "OTEL_SERVICE_NAME",
        "APP_LOG_LEVEL",
        "AVATAX_CLIENT_TIMEOUT",
        "ANALYZE_BUNDLE",
