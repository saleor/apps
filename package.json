{
  "name": "saleor-apps",
  "version": "0.0.0",
  "scripts": {
    "build": "turbo run build",
    "check-deps": "syncpack list-mismatches",
    "check-spelling": "cspell **/*.{jsx,tsx,js,ts,md,mdx}",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format-package-json": "syncpack format",
    "generate": "turbo run generate",
    "github:release": "pnpm changeset tag && git push --follow-tags",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "start": "turbo run start",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@sentry/cli": "2.20.6",
    "@types/node": "18.15.3",
    "cspell": "^7.2.0",
    "eslint": "8.46.0",
    "eslint-config-saleor": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "next": "13.4.8",
    "prettier": "3.0.3",
    "syncpack": "10.9.3",
    "turbo": "1.10.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,md}": "prettier --write",
    "*.{ts,tsx,md,js,jsx}": "cspell --no-must-find-files"
  },
  "packageManager": "pnpm@8.7.4",
  "pnpm": {
    "overrides": {
      "@saleor/app-sdk": "0.43.1",
      "crypto-js@<4.2.0": ">=4.2.0"
    }
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "templates/*"
  ]
}
