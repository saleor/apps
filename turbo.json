{
  "$schema": "https://turbo.build/schema.v2.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "VERCEL_ENV",
    "APP_LOG_LEVEL",
    "NODE_ENV",
    "CI",
    "OTEL_SERVICE_NAME",
    "OTEL_ENABLED",
    "ENV",
    "GITHUB_SHA",
    "VERCEL_GIT_COMMIT_SHA",
    "VERCEL_URL",
    "VERCEL",
    "NEXT_RUNTIME"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", ".vercel/**", "!.next/cache/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["src"],
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", ".vercel/**", "!.next/cache/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "generate": {
      "outputs": ["generated/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["^build", "^start"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.spec.ts", "src/**/*.spec.tsx"],
      "outputs": []
    },
    "test:ci": {
      "dependsOn": ["^test:ci"],
      "inputs": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.spec.ts", "src/**/*.spec.tsx"],
      "outputs": ["coverage/**"]
    }
  }
}
